
<div class="jumbotron">
	<p>Wrote a book? A review? Maybe got an award? Add yourself here.</p>
	<% if(dropdownAttributes.length == 0) { %>
		<form action="http://localhost:5000/getAttributes" method="post" class="form-inline">
			<div class="form-group">

				<select id="tables" name="tables" class="form-control">
					<option value="" disabled selected>Select an entity</option>

					<% for(var i = 0; i < dropdownTables.length; i++) { %>
					<option value=<%- dropdownTables[i] %>><%- dropdownTables[i] %></option>
					<% }; %>

				</select>
		    	<input class="btn btn-default" type="submit">
		    </div>	
		</form>
	<% } %>

	<% if(dropdownAttributes.length > 0) { %>
		<form action="http://localhost:5000/insertTuple" method="post"class="form-horizontal" role="form">

		    <div class="form-group" name="hej">
		    <% for(var i = 1; i < dropdownAttributes.length; i++) { %>
		    	<div class="form-group">
		    	      <label class="control-label col-sm-2"><%- dropdownAttributes[i] %></label>
		    	      <div class="col-sm-10">
		    	        <input type="text" class="form-control"  placeholder="..." name="input">
		    	      </div>
		    	</div>
		    <% }; %>
		    </div>
		    <div class="form-group"> 
		        <div class="col-sm-offset-2 col-sm-10">
		          <button type="submit" class="btn btn-default">Submit</button>
		        </div>
		    </div>
	  	</form>
	<% } %>
</div>